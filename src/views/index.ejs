<%-include ("partials/_header.ejs");-%>
  <div class="container">
    <div class="row">
      <!-- FORM -->
      <div class="col-md-5">
        <div class="card">
          <div class="card-body">
            <form action="/add" method="POST">
              <div class="form-group">
                <input type="text" name="title" placeholder="Nombre del platillo" class="form-control">
              </div>
              <div class="form-group">
                <textarea name="description" id="" cols="80" rows="5" class="form-control" placeholder="Descripción del platillo"></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block">
                Añadir
              </button>
            </form>
          </div>
        </div>
      </div>
      <!-- LIST -->
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>N°</th>
              <th>Título</th>
              <th>Descripción</th>
              <th>Operaciones</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<tasks.length; i++){%>
              <tr>
                <td><%= i+1%></td>
                <td><%= tasks[i].title%></td>
                <td><%= tasks[i].description%></td>
                <td>
                  <a href="/order/<%= tasks[i]._id%>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark'%>">
                    Ordenar
                  </a>
                  <a href="/delete/<%= tasks[i]._id%>" class="btn btn-danger">Borrar</a>
                  <a href="/edit/<%= tasks[i]._id%>" class="btn btn-info">Editar</a>
                </td>
              </tr>
            <% }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%-include ("partials/_footer.ejs");-%>